<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/FontSystemColor"
    tools:context=".activities.StartActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:id="@+id/coordinatorLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/select_textview_login"
                android:text="@string/login_start"
                android:layout_weight="0.5"
                android:textColor="@color/FontSystemColor"
                android:textSize="@dimen/text_size"
                android:typeface="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/registrationButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="2dp"


                android:background="@drawable/select_textview_login"
                android:text="@string/registration_start"
                android:textColor="@color/FontSystemColor"
                android:textSize="@dimen/text_size"
                android:typeface="normal"
                android:gravity="center"
                android:clickable="true"
                android:textStyle="bold"/>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"
        android:layout_below="@+id/coordinatorLayout"
        android:tag="fragment"
        android:layout_marginTop="10dp">

    </fragment>
</RelativeLayout>
